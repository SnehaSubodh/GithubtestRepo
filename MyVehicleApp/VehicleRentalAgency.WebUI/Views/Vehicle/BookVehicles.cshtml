@model IEnumerable<VehicleRentalAgency.Entities.Vehicle>

@{
    ViewBag.Title = "BookVehicles";
}

<h2>Booked  Vehicles for you</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@TempData["deleteMsg"]
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.VehicleId })
        </td>
    </tr>
    }

</table>
